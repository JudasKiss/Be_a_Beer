<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF22113A"
    android:orientation="vertical"
    tools:context=".RankingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/beerImage"
                android:layout_width="162dp"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginTop="20dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/beerTitleText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="12dp"
                android:text=""
                android:textColor="#FFEB3B"
                app:layout_constraintBottom_toTopOf="@+id/beerNationText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/beerStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="10dp"
                android:text="스타일:"
                android:textColor="@color/yellow"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toTopOf="@+id/beerInfo"
                app:layout_constraintEnd_toStartOf="@+id/beerStyleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beerIBU" />

            <TextView
                android:id="@+id/beerCompany"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="8dp"
                android:text="브루어리:"
                android:textColor="@color/yellow"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toTopOf="@+id/beerABV"
                app:layout_constraintEnd_toStartOf="@+id/beerCompanyText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beerNation" />

            <TextView
                android:id="@+id/beerNation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="8dp"
                android:text="국가:"
                android:textColor="@color/yellow"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toTopOf="@+id/beerCompany"
                app:layout_constraintEnd_toStartOf="@+id/beerNationText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beerTitle" />

            <TextView
                android:id="@+id/beerABV"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="7dp"
                android:text="ABV:"
                android:textColor="@color/yellow"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toTopOf="@+id/beerIBU"
                app:layout_constraintEnd_toStartOf="@+id/beerABVText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beerCompany" />

            <TextView
                android:id="@+id/beerIBU"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="13dp"
                android:text="IBU:"
                android:textColor="@color/yellow"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toTopOf="@+id/beerStyle"
                app:layout_constraintEnd_toStartOf="@+id/beerIBUText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beerABV" />

            <TextView
                android:id="@+id/beerInfo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="24dp"
                android:text="제품정보:"
                android:textColor="@color/yellow"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/beerInfoText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/beerStyle" />

            <TextView
                android:id="@+id/beerTitle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="12dp"
                android:text="맥주이름:"
                android:textColor="#FFEB3B"
                android:textColorHighlight="#FF9800"
                app:layout_constraintBottom_toTopOf="@+id/beerNation"
                app:layout_constraintEnd_toStartOf="@+id/beerTitleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/beerCompanyText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toTopOf="@+id/beerABVText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerCompany"
                app:layout_constraintTop_toBottomOf="@+id/beerNationText" />

            <TextView
                android:id="@+id/beerNationText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="8dp"
                android:text=""
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toTopOf="@+id/beerCompanyText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerNation"
                app:layout_constraintTop_toBottomOf="@+id/beerTitleText" />

            <TextView
                android:id="@+id/beerIBUText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="13dp"
                android:text=""
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toTopOf="@+id/beerStyleText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerIBU"
                app:layout_constraintTop_toBottomOf="@+id/beerABVText" />

            <TextView
                android:id="@+id/beerStyleText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toTopOf="@+id/beerInfoText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerStyle"
                app:layout_constraintTop_toBottomOf="@+id/beerIBUText" />

            <TextView
                android:id="@+id/beerInfoText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="24dp"
                android:text=""
                android:textColor="@color/yellow"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerInfo"
                app:layout_constraintTop_toBottomOf="@+id/beerStyleText" />

            <TextView
                android:id="@+id/beerABVText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="7dp"
                android:text=""
                android:textColor="@color/yellow"
                app:layout_constraintBottom_toTopOf="@+id/beerIBUText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/beerABV"
                app:layout_constraintTop_toBottomOf="@+id/beerCompanyText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <Button
                android:id="@+id/button"
                android:layout_width="163dp"
                android:layout_height="47dp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/round_corner"
                android:text="국가별 맥주추천"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                app:backgroundTint="#FF2B1845"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.506"
                tools:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="163dp"
                android:layout_height="47dp"
                android:layout_marginEnd="37dp"
                android:layout_marginRight="37dp"
                android:background="@drawable/round_corner"
                android:text="종류별 맥주추천"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="#FF2B1845"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="82dp"
        android:layout_height="28dp"
        android:layout_marginLeft="148dp"
        android:layout_weight="1"
        android:background="@drawable/camera"
        android:tint="#673AB7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#FF22113A"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:menu="@menu/menu_navigation">


        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>
</LinearLayout>